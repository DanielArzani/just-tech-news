<ol class="post-list">
  {{! We are making it explicitly clear but handlebars is smart enough to know that its working with an object }}
  {{#each posts as |post|}}
    <li>
      <article class="post">
        <div class="title">
          <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
          <span>({{post.post_url}})</span>
        </div>
        <div class="meta">
          {{post.vote_count}}
          point(s) by
          {{post.user.username}}
          on
          {{post.created_at}}
          |
          <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
      </article>
    </li>
  {{/each}}
</ol>